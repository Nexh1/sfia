{% extends 'base.html.twig' %}
{% block title %}Actualités - SFIA{% endblock %}
{% block meta %}L'actualité des entreprises ardennaises{% endblock %}
{% block main %}
<div class="container">
    <h1 class="mt-5 text-center p-2 pl-3">L'actualité des entreprises industrielles des Ardennes</h1>
    <div class="row">
        {% for article in articles %}
        <div class="col-12 col-md-5 p-5 bg-light mx-auto my-5 ">
            <h3 class="col-12 text-primary text-center"><a href="{{ path('article_display', {'id':article.id} ) }}">{{article.title}}</a></h3>
            <p class="mt-3 text-center">Créé le {{article.createdAt | date("d/m/Y") }} par {{article.user.username}}    </p>
            <div class="col-12 mt-5 p-0 text-center">
                <img src="{{ asset('uploads/article/' ~ article.image) }}" class="img-fluid article_image"
                    alt="image de l'article">
            </div>
            <div class="col-12 mt-3 pb-2 rounded ">
                <p class=" mt-3 p-0 col-12 col-md-8">{{article.content[:200] | raw }}</p>
                <a class="btn btn-primary text-white mt-2" href="{{ path('article_display', {'id':article.id} ) }}">Lire
                    la suite</a>           
            </div>      
        </div>
        {% endfor %}
    </div>

</div>


{% endblock %}